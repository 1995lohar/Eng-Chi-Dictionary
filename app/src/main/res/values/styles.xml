<resources>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="LevelIndicatorStyle">@style/LevelIndicatorStyle</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="LevelIndicatorStyle">
        <item name="levels">@array/levels</item>
        <item name="android:minHeight">20dip</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:textSize">20sp</item> <!-- menu item text size-->
        <item name="android:listPreferredItemHeightSmall">40dp</item><!-- menu item height-->
    </style>
</resources>

<resources>

    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="LevelIndicatorStyle">@style/LevelIndicatorStyle</item>
    </style>

    <style name="AppTheme" parent="Theme.Base"></style>

    <style name="nav_drawer_list_item_text">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
    </style>

    <style name="CustomProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/commonness_bar</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="LevelIndicatorStyle">
        <item name="levels">@array/levels</item>
        <item name="android:minHeight">20dip</item>
    </style>
</resources>
